<Page
    x:Class="MobilReklameApp.CreateOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MobilReklameApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="567*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Margin="0,0,0,0" Orientation="Vertical" HorizontalAlignment="Left" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Button Content="Tilbage" Click="BackToMainPageClick" FontSize="18" Padding="10,10,10,10" Margin="20,30,0,0" Height="60" Width="130" VerticalAlignment="Top"/>
            <Button Content="Ordreoversigt" FontSize="18" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Height="60" Width="130"/>
        </StackPanel>


        <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.RowSpan="3" VerticalAlignment="Stretch" Grid.Column="1">
            <StackPanel HorizontalAlignment="Right" Height="165" Margin="0,0,0,0" VerticalAlignment="Top" Width="1000">
                <Image Height="165" Width="420" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Margin="0,50,0,0" Width="570" Height="310" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1" Grid.RowSpan="2">
                <TextBlock HorizontalAlignment="Center" Margin="0,0,0,0" Text="Kundeinformation" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="570" TextAlignment="Center" FontSize="40"/>
                <TextBox HorizontalAlignment="Left" Margin="0,0,0,0" Text="Firmanavn " VerticalAlignment="Top" Height="50" Width="570"/>
                <TextBox HorizontalAlignment="Left" Margin="0,0,0,0" Text="CVR" VerticalAlignment="Top" Height="50" Width="570"/>
                <TextBox HorizontalAlignment="Left" Margin="0,0,0,0" Text="Addresse" VerticalAlignment="Top" Height="50" Width="570"/>
                <TextBox HorizontalAlignment="Left" Margin="0,0,0,0" Text="Telefon " VerticalAlignment="Top" Height="50" Width="570"/>
                <TextBox HorizontalAlignment="Left" Margin="0,0,0,0" Text="E-Mail " VerticalAlignment="Top" Height="50" Width="570"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Height="400" Margin="0,400,0,0" VerticalAlignment="Top" Width="572" Grid.RowSpan="2">
                <TextBlock Text="Beskrivelse" TextWrapping="Wrap" Height="50" TextAlignment="Center" FontSize="40" />
                <TextBox Text="Her kan brugeren så beskrive lidt omkring, hvordan og hvorledes det skal laves og hvad det er kunden vil have lavet. og bla bla bla bla bla blabla bla bla bla bla blabla bla bla bla bla blabla bla bla bla bla blabla bla bla bla bla blabla bla bla bla bla blabla bla bla bla bla blabla bla bla bla bla blabla bla bla bla bla blabla bla bla bla bla bla" FontSize="28" TextWrapping="Wrap"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Height="600" Margin="600,100,0,0" VerticalAlignment="Top" Width="400" Orientation="Horizontal">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="100" Height="600">
                    <TextBlock Text="Mål:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,4,0,0"/>
                    <TextBlock Text="Antal:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                    <TextBlock Text="Lam:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                    <TextBlock Text="Lam:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                    <TextBlock Text="Medie:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,0,0,0"/>
                    <TextBlock Text="Medie:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                    <TextBlock Text="751c:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                    <TextBlock Text="751c:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                    <TextBlock Text="751c:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                    <TextBlock Text="3 mm alu sand.:" TextWrapping="Wrap" Height="50" TextAlignment="Center"/>
                    <TextBlock Text="10 mm PVC:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                    <TextBlock Text="Pris kr." TextWrapping="Wrap" Height="30" TextAlignment="Center"/>
                    <TextBlock Text="dtp kr." TextWrapping="Wrap" Height="30" TextAlignment="Center"/>
                    <TextBlock Text="Fragt kr." TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                    <TextBlock Text="Op til +10%:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                    <TextBlock Text="Lev. antal:" TextWrapping="Wrap" Height="30" TextAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
                <StackPanel Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300">
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="50"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                    <TextBox Text="TextBox" Height="30"/>
                </StackPanel>
            </StackPanel>
        </Grid>


    </Grid>
</Page>
